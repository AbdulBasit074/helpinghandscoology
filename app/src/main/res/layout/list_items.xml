<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#C3F1C27D"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        app:cardMaxElevation="40dp"
        android:background="#D21B1209"
        >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="horizontal"
        android:background="@drawable/darkblack"
      android:padding="7dp"
        android:id="@+id/whole"

      >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/profile_show"
            android:src="@drawable/triad_ring"
            android:layout_gravity="center"

            />
      <TextView
          android:layout_width="130dp"
          android:layout_height="25dp"
          android:id="@+id/name_show"
          android:text="Loading..."
          android:layout_gravity="center"
          android:typeface="serif"
          android:textStyle="bold"
          android:textColor="#ffffff"
          android:autoSizeMaxTextSize="100sp"
          android:layout_marginLeft="20dp"
          android:autoSizeMinTextSize="20sp"
          android:autoSizeStepGranularity="3sp"
          android:autoSizeTextType="uniform"
          />

      <ImageView
          android:layout_width="60dp"
          android:layout_height="51dp"
          android:layout_gravity="center"
          android:layout_marginLeft="60dp"
          android:src="@drawable/rightarrow"


          android:textColor="#ffffff"
          android:textStyle="bold" />





  </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>