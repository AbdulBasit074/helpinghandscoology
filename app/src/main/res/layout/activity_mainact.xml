<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkblackboard"
    >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:id="@+id/st"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="88dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/standard_cal"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STANDARD CALCULATOR"
            android:textColor="#F3F5F2"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/sn"
        android:layout_marginTop="5dp"
         android:paddingBottom="10dp"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/scientific_calculator"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCIENTIFIC CALCULATOR"
            android:textColor="#F0F3F0"
            android:textStyle="bold"
            android:textSize="15dp"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/un"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toBottomOf="@+id/sn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/convert"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIT CONVERTER"
            android:textColor="#EBF3E9"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
