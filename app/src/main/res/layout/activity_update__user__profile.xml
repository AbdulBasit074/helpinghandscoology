<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_User_Profile"
    android:background="@drawable/backmulti"
    >

    <ImageView
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:id="@+id/edit_profile12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/profile_pic"
        android:layout_marginTop="70dp"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Upload"
        android:textStyle="bold"

        android:typeface="serif"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile12"
        android:layout_marginLeft="40dp"
        android:background="@drawable/buttonstyle1"
        android:layout_marginRight="40dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/upload_profile"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:typeface="serif"
        android:hint="Name"
        android:background="@drawable/buttonstyle1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textColorHint="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"

        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/buttonstyle1"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/upload_profile"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:id="@+id/edit_email"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Done"
            android:textColor="#FCFCFC"
            android:background="@drawable/buttonstyle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
android:typeface="serif"
            app:layout_constraintTop_toBottomOf="@+id/prog"
            android:padding="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"


            android:id="@+id/edit"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"

            />
            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:indeterminateTint="#7CB3B3B3"
                android:layout_marginTop="15dp"
                android:id="@+id/prog"

                />
</android.support.constraint.ConstraintLayout>