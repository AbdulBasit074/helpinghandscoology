<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_User_Profile"
    android:background="@drawable/backmulti"
    >

    <TextView
        android:id="@+id/edit_email_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RESET PASSWORD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textColorHint="#ffffff"
        android:layout_marginRight="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"

       />












    <EditText
        android:id="@+id/edit_email_forget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/buttonstyle1"
        android:hint="Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="240dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textColorHint="#ffffff"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif"

        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Recover"
            android:textColor="#FCFCFC"
            android:background="@drawable/buttonstyle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:typeface="serif"
            app:layout_constraintTop_toBottomOf="@+id/edit_email_forget"
            android:padding="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"


            android:id="@+id/recover"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"

            />
            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recover"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:indeterminateTint="#7CB3B3B3"
                android:layout_marginTop="15dp"
                android:id="@+id/progyt"

                />
</android.support.constraint.ConstraintLayout>