<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Material_Document_View"
    android:background="@drawable/backmulti"
    >
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:padding="30dp"
        android:layout_margin="50dp"
        android:background="@drawable/buttonstyle1"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/card_view_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="#F0ECC0"
            app:cardBackgroundColor="#54291C0F"

            >

            <ImageView
                android:id="@+id/icon_file_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pdf"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/file_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="@dimen/list_item_padding"
                android:textColor="#ffffff"

                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Abdul Basit"
                android:layout_marginLeft="90dp"
                />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/downlo"
                android:layout_weight="1"
                android:id="@+id/download"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/saw"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/visibility"
                />


        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>