<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkblackboard2"
    android:id="@+id/content_main"
    tools:showIn="@layout/app_bar_main2"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#E2E2E2"
        android:layout_marginLeft="30dp"
        android:typeface="serif"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.14"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:typeface="serif"
        android:text="Loading.."
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.07"
        android:textColor="#E2E2E2"
        app:layout_constraintTop_toBottomOf="@id/time"
        />

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/classroom"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/classroom"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/classroomimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Room"
            android:textColor="#E2E2E2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />





    </LinearLayout>



    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/dictionar1"
        app:layout_constraintLeft_toRightOf="@id/classroom"
        app:layout_constraintBottom_toTopOf="@id/calculator1"
        android:background="@drawable/buttonstyle"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"


        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dictionary"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
android:id="@+id/dictionaryimage"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dictionary"
            android:textColor="#E2E2E2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
android:layout_gravity="center"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/calculator1"
        android:background="@drawable/buttonstyle"

        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/classroom"

        app:layout_constraintLeft_toLeftOf="parent"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/calculator"
            android:layout_marginTop="20dp"
            android:id="@+id/calculatorimage"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textColor="#E2E2E2"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/unitconverter"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dictionar1"
        app:layout_constraintLeft_toRightOf="@id/calculator1"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        >



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/convert"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/unitconvertorimage"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Converter"
            android:textColor="#F7F9FC"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>

